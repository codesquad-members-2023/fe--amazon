{
  "env": {
    "browser": true,
    "es2021": true,
    "node": true
  },
  "extends": ["airbnb-base", "plugin:prettier/recommended"],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module",
    "ecmaFeatures": { "jsx": true }
  },
  "rules": {
    "import/extensions": "off",
    "max-depth": ["error", 2],
    "prettier/prettier": ["error", { "endOfLine": "auto" }]
  }
}
